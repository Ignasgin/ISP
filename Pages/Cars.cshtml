@page
@model CarsModel
@{
    ViewData["Title"] = "Automobilių sąrašas";
}
<style>
    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1rem;
        display: flex;
        justify-content: left;
        align-items: start;
        margin: 0;
    }

    .action-links a {
        text-decoration: none;
        color: #333;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    .new-car-link {
        display: flex;
        justify-content: flex-start;
        margin-top: 20px;
    }

    

   
</style>

<body>
    <div class="container-fluid">
        <h1>@ViewData["Title"]</h1>

        <div class="new-car-link">
            <a href="/AddCar" class="btn btn-secondary" style="margin-right: 1.5rem;">Pridėti naują automobilį</a>
            <a href="/Filter" class="btn btn-secondary">Filtruoti automobilius</a>
        </div>

        <table cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
            <thead>
                <tr>
                    <th style="background-color: #827a78;border: 2px solid #333;">Markė</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Išleidimo metai</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Litražas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Kuro tipas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Rida</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Įvertinimas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Statusas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Kaina</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Draudimai</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td style="border: 2px solid #333;">
                            <a href="/Car?make=@car.Marke&model=@car.Modelis&year=@car.Metai&engineSize=@car.Litrazas&fuelType=@car.Kuro_Tipas&mileage=@car.Rida&grade=@car.Ivertinimu_Vidurkis&state=@car.Statusas&price=@car.Kaina">
                                @car.Marke (spaudžiamas)
                            </a>
                        </td>
                        <td style="border: 2px solid #333;">@car.Metai</td>
                        <td style="border: 2px solid #333;">@car.Litrazas</td>
                        <td style="border: 2px solid #333;">@car.Kuro_Tipas</td>
                        <td style="border: 2px solid #333;">@car.Rida km</td>
                        <td style="border: 2px solid #333;">@car.Ivertinimu_Vidurkis</td>
                        <td style="border: 2px solid #333;">@car.Statusas</td>
                        <td style="border: 2px solid #333;">€@car.Kaina</td>
                        <td style="border: 2px solid #333;">Privalomas, Kasko</td>
                        <td class="action-links">
                            <b>
                                <a href="/ChangeCar?id=@car.Id_Automobilis">Redaguoti</a>
                                <a href="/RepairHistory?id=@car.Id_Automobilis">Remontas</a>
                                <a href="/Calendar?id=@car.Id_Automobilis">Kalendorius</a>
                                <a href="/Confirmation?id=@car.Id_Automobilis">Pašalinti</a>
                            </b>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
