@page
@model ISP.Pages.ConfirmationModel
@{
	ViewData["Title"] = "Patvirtinti panaikinimą";
}
<style>
        /* Modal styling */
    .modal {
        
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #fff;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #333;
        width: 300px;
        text-align: center;
    }

    .modal-button {
        margin: 10px;
        padding: 10px 20px;
        cursor: pointer;
    }
    .confirm {
        background-color: #28a745;
        color: #fff;
        border: none;
        text-decoration: none;
    }

    .cancel {
        background-color: #dc3545;
        color: #fff;
        border: none;
        text-decoration: none;
    }
</style>
<body>

    <div class="container-fluid">
        <div  >
                <div class="modal-content">
                <h1 id="car-make">Ar tikrai norite ištrinti automobilį?</h1>
                    <b>
                        <a href="/Cars" class="modal-button confirm">Taip</a>
                        <a href="/Cars" class="modal-button cancel">Ne</a>
                    </b>
                    
                </div>
        </div>
    </div>
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const make = urlParams.get('make') || 'automobilį';

        document.getElementById("car-make").textContent = `Ar tikrai norite ištrinti automobilį ${make}?`;
    </script>
</body>
