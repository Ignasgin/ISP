@page
@model ISP.Pages.ChangeCarModel
@{
    ViewData["Title"] = "Redaguoti automobilį";
}

<div class="container">
    <h1>Redaguoti automobilį</h1>

    <form method="post" action="/SaveCarChanges">
        <div class="form-group">
            <label>Markė</label>
            <textarea asp-for="Make" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Išleidimo metai</label>
            <textarea asp-for="Year" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Litražas</label>
            <textarea asp-for="EngineSize" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Kuro tipas</label>
            <textarea asp-for="FuelType" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Rida</label>
            <textarea asp-for="Mileage" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Įvertinimas</label>
            <textarea asp-for="Grade" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Statusas</label>
            <textarea asp-for="State" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Kaina</label>
            <textarea asp-for="Price" class="form-control"></textarea>
        </div>

        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label>Draudimai</label>
            <textarea asp-for="Insurance" class="form-control"></textarea>
        </div>

        <a href="/Cars" class="btn btn-secondary">Išsaugoti</a>
        <a href="/Cars" class="btn btn-secondary">Atšaukti</a>
    </form>
</div>
