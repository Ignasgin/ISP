@page
@model RegisterModel
@using ISP.Data
@inject AppDbContext _context
@{
    ViewData["Title"] = "Registracija";
}

<div class="container">
    <h1>Registracija</h1>

    <form method="post">
        <div class="form-group">
            <label>Vardas</label>
            <input asp-for="User.Vardas" class="form-control" />
            <span asp-validation-for="User.Vardas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Pavardė</label>
            <input asp-for="User.Pavarde" class="form-control" />
            <span asp-validation-for="User.Pavarde" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Gimimo data</label>
            <input asp-for="User.Gimimo_Data" class="form-control" type="date" />
            <span asp-validation-for="User.Gimimo_Data" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Stažas (metais)</label>
            <input asp-for="User.Stazas" class="form-control" type="number" />
            <span asp-validation-for="User.Stazas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Asmens kodas</label>
            <input asp-for="User.Asmens_Kodas" class="form-control" />
            <span asp-validation-for="User.Asmens_Kodas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Miestas</label>
            <input asp-for="User.Miestas" class="form-control" />
            <span asp-validation-for="User.Miestas" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Slaptažodis</label>
            <input asp-for="User.Slaptazodis" class="form-control" type="password" />
            <span asp-validation-for="User.Slaptazodis" class="text-danger"></span>
        </div>

        <br />
        <button type="submit" class="btn btn-primary">Užsiregistruoti</button>
        <a href="/Index" class="btn btn-secondary">Atšaukti</a>
    </form>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            Prašome ištaisyti klaidas formoje.
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
