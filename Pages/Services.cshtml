@page
@model ISP.Pages.ServicesModel

@{
    ViewData["Title"] = "Servisų sąrašas";
}

<style>
    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 1rem;
        display: flex;
        justify-content: left;
        align-items: start;
        margin: 0;
    }

    .action-links a {
        text-decoration: none;
        color: #333;
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .new-car-link {
        display: flex;
        justify-content: flex-start;
        margin-top: 20px;
    }
</style>

<body>
    <div class="container-fluid">
        <h1>@ViewData["Title"]</h1>

        <br />
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-6">
                    <a href="/AddService" class="btn btn-secondary" style="margin-right: 1.5rem;">Pridėti naują servisą</a>
                </div>
                <div class="col-3">
                    <select id="cars" class="form-select">
                        <option value="" selected disabled>Pasirinkite miestą</option>
                        <option value="Kaunas">Kaunas</option>
                        <option value="Vilnius">Vilnius</option>
                        <option value="Šiauliai">Šiauliai</option>
                        <option value="Klaipėda">Klaipėda</option>
                    </select>
                </div>
                <div class="col-2">
                    <a href="?" class="btn btn-secondary" style="margin-right: 1.5rem;">Filtruoti</a>
                </div>
            </div>
        </div>

        <table cellpadding="10" cellspacing="0" style="width: 100%; margin-top: 20px; border-collapse: collapse;">
            <thead>
                <tr>
                    <th style="background-color: #827a78;border: 2px solid #333;">Pavadinimas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Adresas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Aprašymas</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Atliekamos paslaugos</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Registracija</th>
                    <th style="background-color: #827a78;border: 2px solid #333;">Veiksmai</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Servisai)
                {
                    <tr>
                        <td style="border: 2px solid #333;">@service.Pavadinimas</td>
                        <td style="border: 2px solid #333;">@service.Adresas</td>
                        <td style="border: 2px solid #333;">@service.Aprasymas</td>
                        <td style="border: 2px solid #333;">
                            @foreach (var paslauga in service.ServicePaslaugos)
                            {
                                <p>@paslauga.Paslauga.Pavadinimas</p>
                            }
                        </td>
                        <td style="border: 2px solid #333;">
                            <a href="/ServiceRegistration" class="btn btn-primary">Registruotis</a>
                        </td>
                        <td style="border: 2px solid #333;">
                            <a href="/Services/EditService/@service.Id_Servisas" class="btn btn-warning">Redaguoti</a>
                            <a href="/Services/DeleteService/@service.Id_Servisas" class="btn btn-danger">Šalinti</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>