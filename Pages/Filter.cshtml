@page
@model ISP.Pages.FilterModel
@{
    ViewData["Title"] = "Filtruoti automobilius";
}

<div class="container">
    <h1>Filtruoti automobilius</h1>

    <form method="post">
        <div class="form-group">
            <label>Markė</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="BMW">BMW</option>
                <option value="Audi">Audi</option>
            </select>
        </div>

        <div class="form-group">
            <label>Išleidimo metai</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="2015">2015</option>
                <option value="2018">2018</option>
            </select>
        </div>

        <div class="form-group">
            <label>Litražas</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="2.0">2.0</option>
                <option value="1.8">1.8</option>
            </select>
        </div>

        <div class="form-group">
            <label>Kuro tipas</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="Dyzelinas">Dyzelinas</option>
                <option value="Benzinas">Benzinas</option>
            </select>
        </div>

        <div class="form-group">
            <label>Rida</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="150000 km">150000 km</option>
                <option value="80000 km">80000 km</option>
            </select>
        </div>

        <div class="form-group">
            <label>Įvertinimas</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="9/10">9/10</option>
                <option value="8/10">8/10</option>
            </select>
        </div>

        <div class="form-group">
            <label>Statusas</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="Aktyvus">Aktyvus</option>
            </select>
        </div>

        <div class="form-group">
            <label>Kaina</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="€15,000">€15,000</option>
                <option value="€18,000">€18,000</option>
            </select>
        </div>

        <div class="form-group" style="margin-bottom: 1.5rem;">
            <label>Draudimai</label>
            <select class="form-control">
                <option value="base">-----</option>
                <option value="Privalomas, Kasko">Privalomas, Kasko</option>
                <option value="Privalomas">Privalomas</option>
            </select>
        </div>

        <a href="/Cars" class="btn btn-secondary">Filtruoti</a>
        <a href="/Cars" class="btn btn-secondary">Atšaukti</a>
    </form>
</div>
